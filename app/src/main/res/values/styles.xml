<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="HiddenTitleTheme" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="RoundedCustomButton" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/custom_btn</item>
        <item name="android:colorButtonNormal">#1a237e</item>
        <item name="android:colorControlHighlight">#673ab7</item>
        <item name="android:textColor">#AAA</item>
    </style>

    <style name="Background">
        <item name="android:background">@android:color/darker_gray</item>
    </style>
</resources>
